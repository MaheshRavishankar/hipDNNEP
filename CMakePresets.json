{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/../build/hipDNNEP/${presetName}",
      "installDir": "${sourceDir}/../install/hipDNNEP/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "THEROCK_DIST": "/home/mahesh/TheRock/build/MaheshRelWithDebInfo/dist/rocm",
        "ONNXRUNTIME_ROOT": "/home/mahesh/onnxruntime/onnxruntime",
        "HIP_PLATFORM": "amd"
      }
    },
    {
      "name": "base-mlir",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "HIPDNN_EP_ENABLE_TORCH_MLIR": "ON",
        "TORCH_MLIR_INSTALL_DIR": "${sourceDir}/../build/torch-mlir/install"
      }
    },
    {
      "name": "RelWithDebInfo",
      "displayName": "RelWithDebInfo",
      "description": "Release with debug info",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug",
      "description": "Debug build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release",
      "displayName": "Release",
      "description": "Release build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "RelWithDebInfo-MLIR",
      "displayName": "RelWithDebInfo with Torch-MLIR",
      "description": "Release with debug info and Torch-MLIR support",
      "inherits": "base-mlir",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Debug-MLIR",
      "displayName": "Debug with Torch-MLIR",
      "description": "Debug build with Torch-MLIR support",
      "inherits": "base-mlir",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "RelWithDebInfo",
      "configurePreset": "RelWithDebInfo"
    },
    {
      "name": "Debug",
      "configurePreset": "Debug"
    },
    {
      "name": "Release",
      "configurePreset": "Release"
    },
    {
      "name": "RelWithDebInfo-MLIR",
      "configurePreset": "RelWithDebInfo-MLIR"
    },
    {
      "name": "Debug-MLIR",
      "configurePreset": "Debug-MLIR"
    }
  ],
  "testPresets": [
    {
      "name": "RelWithDebInfo",
      "configurePreset": "RelWithDebInfo",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "Debug",
      "configurePreset": "Debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "RelWithDebInfo-MLIR",
      "configurePreset": "RelWithDebInfo-MLIR",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "Debug-MLIR",
      "configurePreset": "Debug-MLIR",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
